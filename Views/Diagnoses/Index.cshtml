@model IEnumerable<HospitalManagementSystem.Models.Diagnosis>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center;">Diagnosis</h1>
<h3 style="color:blue;">Index</h3>



<p>
    <a asp-action="Create">Create New</a>

</p>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Disease)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Symptoms)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Medicine)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Disease)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Symptoms)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Medicine)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
